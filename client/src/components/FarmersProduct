import React, { useState } from "react";
import AnimalsForm from "../utilis/AnimalsForm";
import LandForm from "../utilis/LandForm";

function FarmerProd() {
  const [whichprod, setWhichprod] = useState(true);

  return (
    <>
      {whichprod ? (
       <section class="bg-primary dark:bg-gray-900">
          <button
            className="text-white bg-gradient-to-b from-cyan-500 to-blue-500 px-6 py-3 my-8 mx-auto flex items-center rounded-md hover:scale-110 duration-300"
            onClick={() => setWhichprod(false)}
          >
            Land Form
          </button>
          <AnimalsForm setWhichprod={setWhichprod} />
          <br></br>
          </section>
      ) : (
        <section class="bg-primary dark:bg-gray-900">
          <button
            className="text-white bg-gradient-to-b from-cyan-500 to-blue-500 px-6 py-3 my-8 mx-auto flex items-center rounded-md hover:scale-110 duration-300"
            onClick={() => setWhichprod(true)}
          >
            Animal Form{" "}
          </button>
          <LandForm setWhichprod={setWhichprod} />
          <br></br>
          </section>
      )}
    </>
  );
}

export default FarmerProd;